import '../styles/globals.css'
import type { AppProps } from 'next/app'
import { ThemeProvider } from 'next-themes';
import Nav from '../components/layout/nav';
import MenuOverlay from '../components/layout/menuoverlay';
import { motion } from 'framer-motion';
import { AnimatePresence } from 'framer-motion';
import { useState, useCallback, useEffect } from 'react';
import { ltr, rtl, up } from '../utils/pageTransition';
	
const variants = {
	initial: (page: number) => {
	  return {
			x: page > 0 ? -200 : 200,
			opacity: 0
	  }
	}, 
	enter: {
		x: 0,
		opacity: 1
  },
	exit: (page: number) => {
		return {
			x:  page < 0 ? -200 : 200,
			opacity: 0
		}
	}
}

function MyApp({ Component, pageProps, router }: AppProps) {
	const [active, setActive] = useState(false);
	const [page, setPage] = useState(0);

	const navOnClickHandler = useCallback(() => setActive(!active), [active, setActive]) 

	// Stop scrolling when overlay menu is up
	useEffect(() =>	active ? document.body.classList.add('overflow-hidden') : document.body.classList.remove('overflow-hidden'), [active])


	useEffect(() => {
		switch(router.route) {
			case "/":
				setPage(0)
				break;
			case "/work":
				setPage(1)
				break;
			case "/blog":
				setPage(2)
				break;
		}
	}, [router.route])

	return (
		<ThemeProvider attribute='class' defaultTheme='light'>
				<div  className='bg-light text-dark dark:bg-dark dark:text-light text-body font-sansSerif'>
					<div className='max-w-[650px] mx-auto'>
					<Nav active={active} setActive={navOnClickHandler} />
					<AnimatePresence exitBeforeEnter custom={page}>
						<motion.div
							variants={variants} 
							initial="hidden" 
							animate="enter" 
							exit="exit"
							key={router.route}
							custom={page}
						>
							<Component {...pageProps} />
						</motion.div>
					</AnimatePresence>
				</div>
			</div>
			{ active && <MenuOverlay /> }
		</ThemeProvider>
	)
}

export default MyApp;
